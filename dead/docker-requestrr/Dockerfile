FROM ghcr.io/linuxserver/baseimage-ubuntu:focal

ARG TARGETPLATFORM
ARG BUILDPLATFORM
ARG VERSION="V2.1.1"
ARG BRANCH="master"
ARG DEBIAN_FRONTEND="noninteractive"

ENV XDG_CONFIG_HOME="/config/xdg"

RUN  \
  echo "**** add repositories ****" && \
    apt-get update -yqq && \
  echo "**** install packages ****" && \
    apt-get install -yqq libicu66 unzip jq curl aria2 software-properties-common gpg-agent && \
    aria2c -d /tmp -o requestrr.zip "https://github.com/darkalfx/requestrr/releases/download/${VERSION}/requestrr-linux-x64.zip" && \
    unzip -q /tmp/requestrr.zip -d /tmp/requestrr && \
    mkdir -p /app/requestrr/bin/ && \
    mv /tmp/requestrr/requestrr-linux-x64/* /app/requestrr/bin/ && \
    chmod +x /app/requestrr/bin/Requestrr.WebApi && \
  echo "**** cleanup ****" && \
    apt-get remove -yqq aria2 jq software-properties-common gpg-agent && \
    apt-get autoremove -yqq && apt-get clean -yqq && \
    rm -rf /tmp/* /var/lib/apt/lists/* /var/tmp/*

COPY ./apps/docker-requestrr/root/ /
EXPOSE 4545
VOLUME /config
