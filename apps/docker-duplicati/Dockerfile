FROM ghcr.io/dockserver/docker-alpine:latest

LABEL org.opencontainers.image.source="https://github.com/dockserver/container"

ARG TARGETPLATFORM
ARG BUILDPLATFORM

ARG VERSION=""
ARG BRANCH="master"

ENV XDG_CONFIG_HOME="/config"

RUN \
  echo "**** install packages ****" && \
    apk add -U --update --no-cache unzip jq openssl curl tar sqlite-libs && \
    apk add -U --update --no-cache --repository http://dl-cdn.alpinelinux.org/alpine/edge/testing mono libgdiplus terminus-font && \
    apk add -U --update --no-cache --repository http://dl-cdn.alpinelinux.org/alpine/v3.14/main unrar && \
  echo "**** install 'docker-duplicati' ****" && \
    mkdir -p /app/duplicati && \
    curl -o /tmp/duplicati.zip -L "$(curl -s https://api.github.com/repos/duplicati/duplicati/releases/tags/v | jq -r .assets[].browser_download_url | grep zip | grep -v signatures)" && \
    unzip /tmp/duplicati.zip -d /app/duplicati && \
  echo "**** cleanup ****" && \
    rm -rf /tmp/* /var/tmp/*

COPY --chown=abc ./apps/docker-duplicati/root/ /

EXPOSE 8200
