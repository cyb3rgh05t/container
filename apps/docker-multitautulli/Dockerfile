FROM ghcr.io/dockserver/docker-alpine:latest
LABEL org.opencontainers.image.source="https://github.com/dockserver/container"

ARG TARGETPLATFORM
ARG BUILDPLATFORM
ARG VERSION="4.1.07"
ARG BRANCH="master"

ENV TAUTULLI_DOCKER=True

RUN \
   echo "**** update packages ****" && \
     apk --quiet --no-cache --no-progress update && \
     apk --quiet --no-cache --no-progress upgrade && \
   echo "**** install build packages ****" && \
     apk add -U --update --no-cache curl tar jq && \
   echo "**** install app ****" && \
     mkdir -p /app/tautulli && \
     curl -fsSL "https://github.com/zSeriesGuy/Tautulli/archive/v${VERSION}.tar.gz" | tar xzf - -C /app/tautulli --strip-components=1 && \
   echo -e "v4.1.07" > /app/tautulli/version.txt && \
   echo -e "master" > /app/tautulli/branch.txt && \
   echo "*** cleanup system ****" && \
     apk del --purge build-dependencies && \
     apk del --quiet --clean-protected --no-progress && \
     rm -f /var/cache/apk/*

COPY ./apps/docker-multitautulli/root/ /

EXPOSE 8181

VOLUME /config
